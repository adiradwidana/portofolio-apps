<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:id="@+id/state_layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/state_layout_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/grey_60"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/state_layout_txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_60"
            android:lineSpacingExtra="4sp"
            android:gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/state_layout_btn_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_purple_a400"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/state_layout_content"/>


</RelativeLayout>